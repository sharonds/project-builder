{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bug Report",
  "description": "Bug investigation report generated by the Bug Triage Agent",
  "type": "object",
  "required": ["id", "title", "reported_by", "created_at", "symptoms", "reproduction_steps", "root_cause", "affected_areas", "severity"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^BUG-[0-9]+$",
      "description": "Unique bug ID (e.g., BUG-20250107123456)"
    },
    "title": {
      "type": "string",
      "description": "Descriptive bug title"
    },
    "reported_by": {
      "type": "string",
      "description": "Who reported the bug"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the bug was reported"
    },
    "symptoms": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Observable symptoms of the bug"
    },
    "reproduction_steps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Steps to reproduce the bug"
    },
    "root_cause": {
      "type": "object",
      "required": ["summary", "affected_files", "code_path"],
      "description": "Root cause analysis",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Explanation of WHY the bug occurs"
        },
        "affected_files": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Files containing the bug"
        },
        "code_path": {
          "type": "string",
          "description": "Execution path that triggers the bug"
        }
      }
    },
    "affected_areas": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Functional areas affected by the bug"
    },
    "severity": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical"],
      "description": "Bug severity level"
    },
    "related_bugs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "IDs of related bugs"
    }
  }
}
