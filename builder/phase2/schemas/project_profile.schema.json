{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Profile",
  "description": "Architecture profile generated by the Analyzer Agent",
  "type": "object",
  "required": ["tech_stack", "architecture", "conventions", "schemas", "integration_points"],
  "properties": {
    "tech_stack": {
      "type": "object",
      "description": "Technology stack used in the project",
      "properties": {
        "frontend": {
          "type": ["string", "null"],
          "description": "Frontend framework (e.g., React, Vue, Angular, None)"
        },
        "backend": {
          "type": ["string", "null"],
          "description": "Backend framework (e.g., Node.js, Python/Flask, Firebase Functions)"
        },
        "database": {
          "type": ["string", "null"],
          "description": "Database technology (e.g., Firestore, PostgreSQL, MongoDB)"
        },
        "auth": {
          "type": ["string", "null"],
          "description": "Authentication provider (e.g., Firebase Auth, Auth0, Custom JWT)"
        }
      }
    },
    "architecture": {
      "type": "object",
      "description": "Architectural patterns and decisions",
      "properties": {
        "pattern": {
          "type": ["string", "null"],
          "description": "Architecture pattern (monolith, microservices, serverless, jamstack)"
        },
        "data_isolation": {
          "type": ["string", "null"],
          "description": "Data isolation strategy (single-tenant, multi-tenant, collection-per-tenant)"
        },
        "ai_integration": {
          "type": ["string", "null"],
          "description": "AI/LLM integration if any (Claude API, OpenAI, None)"
        }
      }
    },
    "conventions": {
      "type": "object",
      "description": "Code conventions and patterns",
      "properties": {
        "naming": {
          "type": ["string", "null"],
          "description": "Naming convention (camelCase, snake_case, PascalCase)"
        },
        "file_structure": {
          "type": ["string", "null"],
          "description": "File organization (feature-based, layer-based, flat)"
        },
        "state_management": {
          "type": ["string", "null"],
          "description": "State management approach (Redux, Context, Zustand, None)"
        }
      }
    },
    "schemas": {
      "type": "object",
      "description": "Data schemas extracted from code",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "fields": {
            "type": "array",
            "items": { "type": "string" }
          },
          "relationships": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "integration_points": {
      "type": "array",
      "description": "How components connect to each other",
      "items": {
        "type": "string"
      }
    }
  }
}
